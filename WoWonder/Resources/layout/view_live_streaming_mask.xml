<?xml version="1.0" encoding="utf-8" ?> 
<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
	android:id="@+id/MaskLayout"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:layout_gravity="bottom"
	android:visibility="gone"
	android:background="@drawable/EditTextStyleOne"
	android:backgroundTint="#90000000"
	android:gravity="center"
	android:layout_margin="5dp"
	android:orientation="vertical">
 
	<ImageView
		android:id="@+id/Mask_close"
		android:layout_width="30dp"
		android:layout_height="30dp"
		android:backgroundTint="#90000000"
		android:background="@drawable/shape_radius_btn"
		android:padding="10dp"
		android:tint="@color/gnt_white"
		android:layout_gravity="end"
		android:src="@drawable/icon_close_vector" />

	<androidx.recyclerview.widget.RecyclerView
		android:id="@+id/MaskRecycler"
		android:layout_width="match_parent"
		android:layout_height="100dp"
		android:scrollbars="horizontal" />

	<androidx.appcompat.widget.AppCompatSeekBar
		android:id="@+id/MaskSeekBar"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginVertical="6dp"
		android:layout_marginHorizontal="15dp"
		android:visibility="gone"
		android:max="10"
		android:progress="0" />

</LinearLayout>