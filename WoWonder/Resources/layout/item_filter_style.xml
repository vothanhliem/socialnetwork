<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
		android:orientation="vertical"
        android:layout_margin="2dp">

	<FrameLayout
		android:layout_width="wrap_content"
		android:layout_height="wrap_content">

		<WoWonder.Activities.Editor.Tools.Filter.FilterImageView
			android:id="@+id/imgFilterView"
			android:layout_width="100dp"
			android:layout_height="120dp"
			android:scaleType="centerCrop"/>

		<WoWonder.Activities.Editor.Tools.Filter.FilterView
			android:id="@+id/effectView"
			android:visibility="gone"
			android:layout_width="100dp"
			android:layout_height="120dp"/>
		 
	</FrameLayout>
	  
	<TextView
		android:id="@+id/txtFilterName"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:gravity="center"
		android:layout_gravity="center"
		android:padding="4dp"
		android:textColor="@color/gnt_black"
		android:textSize="10dp"/>

</LinearLayout>